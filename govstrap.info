name        = govStrap (ABCC)
description = Light weight bootstrap base theme for govCMS7.
core        = 7.x

;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[header]                         = Header
regions[mobile_nav]                     = Mobile navigation
regions[highlighted]                    = Highlighted
regions[help]                           = Help
regions[content]                        = Content
regions[wizard]                         = Wizard
regions[sidebar_right]                  = Sidebar right
regions[pre_footer]                     = Pre-footer - above footer and under main content
regions[footer]                         = Footer
regions[footer_explore]                 = Footer explore menu
regions[mega_menu_item_building_code]   = Mega menu item - Building Code

;;;;;;;;;;;;;;;;;;;;;
;; Settings
;;;;;;;;;;;;;;;;;;;;;

features[] = favicon

settings[govstrap_skip_link_anchor] = main-content
settings[govstrap_skip_link_text]   = Skip to main content
settings[govstrap_rebuild_registry] = 0

;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;

scripts[] = 'build/js/vendors.js'
scripts[] = 'build/js/app.js'

;;;;;;;;;;;;;;;;;;;;;
;; Stylesheet.
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = build/css/site.css

;;;;;;;;;;;;;;;;;;;;;
;; Excludes
;;;;;;;;;;;;;;;;;;;;;

;;;;;;;;;;;;;;;;;;;;;
;; Plugins
;;;;;;;;;;;;;;;;;;;;;

plugins[panels][layouts] = panels-layouts
